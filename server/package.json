{
    "name": "Talklocal-server",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "license": "MIT",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon --watch './**/*.ts' --exec 'tsx' src/index.ts",
        "build": "esbuild src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "check": "tsc",
        "db:push": "drizzle-kit push",
        "db:setup": "tsx scripts/setup-db.js",
        "db:migrate": "drizzle-kit generate && drizzle-kit migrate"
    },
    "dependencies": {
        "@neondatabase/serverless": "^0.10.4",
        "bcryptjs": "^3.0.2",
        "cloudinary": "^2.5.1",
        "connect-pg-simple": "^10.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "drizzle-orm": "^0.39.3",
        "drizzle-zod": "^0.7.1",
        "express": "^4.21.2",
        "express-session": "^1.18.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "memorystore": "^1.6.7",
        "morgan": "^1.10.1",
        "mysql2": "^3.15.2",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0",
        "pg": "^8.16.3",
        "postgres": "^3.4.4",
        "ws": "^8.18.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/connect-pg-simple": "^7.0.3",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.19",
        "@types/express": "4.17.21",
        "@types/express-session": "^1.18.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/morgan": "^1.9.10",
        "@types/node": "20.16.11",
        "@types/passport": "^1.0.16",
        "@types/passport-local": "^1.0.38",
        "@types/ws": "^8.5.13",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.31.5",
        "esbuild": "^0.25.0",
        "nodemon": "^3.1.10",
        "tsx": "^4.20.5",
        "typescript": "5.6.3"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.8"
    }
}
